{{#each posts}}
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{playlist_name}}</span>
          <p>Genre: {{genre}}</p>
          <img src={{image}} height="200" width="200">
        </div>
        <div class="card-action">
          <a href=# target="_blank"><img src="https://calm-wildwood-87141.herokuapp.com/assets/images/google-icon.png"></a>
          <a href={{itunes_url}} target="_blank"><img src="https://calm-wildwood-87141.herokuapp.com/assets/images/itunes-icon.png"></a>
          <a href={{spotify_url}} target="_blank"><img src="https://calm-wildwood-87141.herokuapp.com/assets/images/spotify-icon.png"></a>
          <a href=# target="_blank"><img src="https://calm-wildwood-87141.herokuapp.com/assets/images/tidal-icon.png"></a>
          <a href=# target="_blank"><img src="https://calm-wildwood-87141.herokuapp.com/assets/images/youtube-icon.png"></a>
          <a href=# target="_blank"><img src="https://calm-wildwood-87141.herokuapp.com/assets/images/amazon-icon.png"></a>
        </div>
      </div>
    </div>
  </div>
{{/each}}